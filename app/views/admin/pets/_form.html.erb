<%= form_with(model: pet, url: admin_pets_path, class: "bg-white p-6 mt-4") do |form| %>
  <% if pet.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul class="list-disc ml-6">
        <% pet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:name].none?, "border-red-400 focus:outline-red-600": pet.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_textarea :description, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:description].none?, "border-red-400 focus:outline-red-600": pet.errors[:description].any?}] %>
  </div>

  <div class="flex justify-between">
    <%= link_to "Delete", admin_pets_path, class: "text-sm/6 font-semibold", style: "align-content: center; color: var(--color-red-600);" %>
    <div class="flex justify-end" style="justify-content: end">
      <%= link_to "Cancel", admin_pets_path, class: "text-sm/6 font-semibold text-gray-900", style: "align-content: center" %>
      <%= form.submit class: "ml-6 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>
<% end %>
